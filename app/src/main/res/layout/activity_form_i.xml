<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.fascup.com.fascup.FormIActivity"
   android:gravity="center">


    <android.support.v7.widget.CardView
        android:layout_margin="55dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- Contenedor Columna Logo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical"
            android:layout_marginTop="60dp">

            <!--imagen logo-->
            <ImageView

                android:id="@+id/imageView7"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/logo_formulario1" />
        </LinearLayout>

        <!-- Contenedor Columna Label Logo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:layout_marginTop="250dp">

            <!--mensaje label-->
            <TextView
                android:id="@+id/textoLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Registre los siguientes datos"
                android:textSize="30sp" />
        </LinearLayout>

        <!--  Contenedor columna row Input-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:layout_marginTop="310dp">

            <!-- Columna 1 Inputs -->
            <LinearLayout
                android:layout_margin="60dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!--Número de Cuestionario-->
                <EditText
                    android:id="@+id/nro_cuestionario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Nro Cuestionario"
                    android:textColor="#6b6b6b"
                    android:textSize="25sp"
                    android:visibility="visible" />

                <!--Encuestador-->
                <EditText
                    android:id="@+id/encuestador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/edittextstyle"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Encuestador (a)"
                    android:textColor="#6b6b6b"
                    android:textSize="25sp" />

                <!--Supervisor-->
                <EditText
                    android:id="@+id/supervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/edittextstyle"
                    android:drawableLeft="@drawable/ic_action_user"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Supervisor (a)"
                    android:textColor="#6b6b6b"
                    android:textSize="25sp"
                    android:visibility="visible" />

                <!--Hidden Hora de inicio-->
                <EditText
                    android:id="@+id/hora_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="name1"
                    android:visibility="invisible" />

                <!--Hidden Hora finalización-->
                <EditText
                    android:id="@+id/hora_finalizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name2"
                    android:visibility="invisible" />

                <!--Hidden Fecha de Difigenciamiento-->
                <EditText
                    android:id="@+id/fecha_diligenciamiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Name3"
                    android:visibility="invisible" />


            </LinearLayout>

        </LinearLayout>

        <!--  Contenedor columna Buttom-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginTop="700dp">

            <Button
                android:id="@+id/sutmit"
                android:layout_width="560dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:background="@drawable/buttomstyle"
                android:text="Siguiente"
                android:textColor="#ffffff"
                android:textSize="30sp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>

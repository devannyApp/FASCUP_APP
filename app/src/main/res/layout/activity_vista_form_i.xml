<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.fascup.com.fascup.VistaFormI"
    android:background="#85ba32">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="600dp"
                    android:layout_height="460dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/bienvenidaformulariovista1" />

                <LinearLayout
                    android:layout_width="400sp"
                    android:layout_height="100sp"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mensaje2"
                        android:textSize="18sp"
                        android:textColor="#fff"
                        android:textStyle="normal"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="40dp">

                <Button
                    android:id="@+id/btn_agregar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_btn_morado_claro"
                    android:text="Continuar"
                    android:layout_margin="10dp"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:onClick="onClick"/>
            </LinearLayout>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>

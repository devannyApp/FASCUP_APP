                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerMaterialTechos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 10 -->
                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="10. ¿Cuál es el material principal de los pisos?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerMaterialPisos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 11 -->
                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="11. ¿La vivienda cuenta con los siguientes servicios básicos?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/idCheckboxEnergiaElectrica"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Energia eléctrica"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />

                        <CheckBox
                            android:id="@+id/idCheckboxTelevisorPorCable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Televisor por cable/satelital"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />

                        <CheckBox
                            android:id="@+id/idCheckboxAlcantarillado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alcantarillado"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />

                        <CheckBox
                            android:id="@+id/idCheckboxRecoleccionBasuras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recolección de basuras"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />

                        <CheckBox
                            android:id="@+id/idCheckboxAcueducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Acueducto (Planta de tratamiento)"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/headertituloverde"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caracteristicas del consumo de agua"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">


                        <!-- Pregunta 15 -->
                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="14. ¿Como alamcena el agua para el consumo?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerAguaParaConsumo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 16 -->
                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="16. ¿En esta vivienda hierven agua para tomar?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerHierveAgua"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 17 -->
                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="17. ¿Cuál es el lugar de preparación de los alimentos?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerPreparacionAlimentos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/headertituloverde"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Caracteristicas de la cosina y alimentos"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="3dp"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">


                        <!-- Pregunta 18 -->
                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="18. La cosina es de uso:"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <Spinner
                            android:id="@+id/idSpinnerCosinaUso"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 19 -->
                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="20dp"
                            android:text="19. ¿Con qué cosinan los alimentos?"
                            android:textColor="#a1a1a1"
                            android:textSize="16sp" />

                        <CheckBox
                            android:id="@+id/idCheckboxGas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gas"
                            android:layout_marginTop="8dp"
                            android:textColor="#6b6b6b" />

                        <CheckBox
                            android:id="@+id/idCheckboxLeña"

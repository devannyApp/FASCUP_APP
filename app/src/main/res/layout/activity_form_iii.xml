<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="android.fascup.com.fascup.FormIIIActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogar y vivienda"
                android:textColor="#8e8e8e"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/familia" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="Datos familiares"
                    android:textColor="#a1a1a1"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:orientation="vertical">

                <!--Cunatas personas habitan en su casa-->
                <EditText
                    android:id="@+id/hg_nro_habitantes_casa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Nro personas que viven en su vivienda?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Cuanto nucleos habitan en esa familia-->

                <EditText
                    android:id="@+id/hg_nro_habitante_de_vivienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Cuanto núcleos habitan en su vivienda?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:text="De las personas que hacen parte de su núcleo familiar ¿Cuantos están ausentes temporalmente?"
                    android:textColor="#77ca00"
                    android:textSize="20sp" />

                <!--Personas ausentes-->
                <EditText
                    android:id="@+id/hg_persona_ausentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Ingrese el valor aqui"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Número de V-->
                <EditText
                    android:id="@+id/hg_nro_personas_comforman_nucleo_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:hint="Cuantas personas conforman su núcleo familiar?"
                    android:inputType="number"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/home2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="Propietario de la vivienda"
                    android:textColor="#a1a1a1"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:orientation="vertical">

                <!--Propietario-->
                <EditText
                    android:id="@+id/nombre_propietario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Nombre del propietario"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Informante-->

                <EditText
                    android:id="@+id/nombre_informante"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Nombre del informante"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />


                <!--Número de telefono celular1-->
                <EditText
                    android:id="@+id/telefono1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Teléfono celular"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Número de telefono celular2-->
                <EditText
                    android:id="@+id/telefono2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Teléfono celular"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Detalles de Ubicación de la Vivienda-->
                <EditText
                    android:id="@+id/detalles_hubicacion_vivienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Detalles de la hubicación de la vivienda"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/sutmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/buttomstyle"
                    android:text="Siguiente"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>



    </ScrollView>


</LinearLayout>
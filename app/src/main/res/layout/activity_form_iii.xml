                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittextstyle"
                            android:textColor="#6b6b6b"
                            android:textSize="20sp" />


                        <!-- Pregunta 23 -->
                        <TextView
                            android:id="@+id/textView25"

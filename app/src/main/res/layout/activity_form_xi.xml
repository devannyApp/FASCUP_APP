<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="350dp"
        android:layout_width="match_parent">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/colpasado"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginBottom="@dimen/margenBottom"
            app:expandedTitleMarginStart="@dimen/margenstart"
            app:expandedTitleTextAppearance="@style/expandido"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:title="Piscicola"
            app:toolbarId="@+id/toolbar">

            <ImageView
                android:id="@+id/app_bar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/peces1"
                android:scaleType="centerCrop" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="android.support.design.widget.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/headertituloverde"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ingrese los siguientes datos"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <!--Pregunta 1-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="1. Que especies de peces cultiva "
                    android:textColor="#a1a1a1"
                    android:textSize="16sp" />

                <CheckBox
                    android:id="@+id/idTilapia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tilapia"
                    android:layout_marginTop="8dp"
                    android:textColor="#6b6b6b" />

                <CheckBox
                    android:id="@+id/idCarpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carpa"
                    android:layout_marginTop="8dp"
                    android:textColor="#6b6b6b" />

                <CheckBox
                    android:id="@+id/idCachama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CachamaCachama"
                    android:layout_marginTop="8dp"
                    android:textColor="#6b6b6b" />

                <CheckBox
                    android:id="@+id/idTrucha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trucha"
                    android:layout_marginTop="8dp"
                    android:textColor="#6b6b6b" />

                <CheckBox
                    android:id="@+id/idOtro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Otro"
                    android:layout_marginTop="8dp"
                    android:textColor="#6b6b6b" />


                <!--Pregunta 2-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="2. Número de lagos o estanques"
                    android:textColor="#a1a1a1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/idLagos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3sp"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#6b6b6b"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="18sp"
                    android:visibility="visible"/>

                <!--Pregunta 3-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="3. Área de lagos o estanques m2"
                    android:textColor="#a1a1a1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/idLagos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="3sp"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#6b6b6b"
                    android:textColorLink="@color/colorPrimary"
                    android:textSize="18sp"
                    android:visibility="visible"/>

                <!--Pregunta 4-->
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="4. Hacia donde corren los vertimientos"
                    android:textColor="#a1a1a1"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <RadioButton
                    android:id="@+id/idRadioRio"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Rio"
                    android:textColor="#6b6b6b" />

                <RadioButton
                    android:id="@+id/idRadioQuebrada"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Quebrada"
                    android:textColor="#6b6b6b" />

                <RadioButton
                    android:id="@+id/idRadioCampoAbierto"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Campo abierto"
                    android:textColor="#6b6b6b" />

                <RadioButton
                    android:id="@+id/idRadioFozaFiltracion"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fosa de filtración"
                    android:textColor="#6b6b6b" />

                <RadioButton
                    android:id="@+id/idRadioOtro"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Otro"
                    android:textColor="#6b6b6b" />
                </RadioGroup>

            </LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_registrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/buttomstyle"
                android:text="Siguiente"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:onClick="onClick" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_help"
        app:backgroundTint="#FFC107"
        app:fabSize="normal"
        app:layout_anchor="@id/appbar"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>

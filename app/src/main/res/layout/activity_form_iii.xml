<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context="android.fascup.com.fascup.FormIIIActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_margin="25dp"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            app:cardCornerRadius="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogar y vivienda"
                android:textColor="#8e8e8e"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/familia" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="Datos familiares"
                    android:textColor="#a1a1a1"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="420dp"
                android:orientation="vertical">

                <!--Cunatas personas habitan en su casa-->
                <EditText
                    android:id="@+id/hv_nro_habitantes_casa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Nro personas que viven en su vivienda?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="30dp"
                    android:visibility="visible" />

                <!--Cuanto nucleos habitan en esa familia-->

                <EditText
                    android:id="@+id/hv_nro_habitante_de_vivienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Cuanto núcleos habitan en su vivienda?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="25dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:text="De las personas que hacen parte de su núcleo familiar ¿Cuantos están ausentes temporalmente?"
                    android:textColor="#77ca00"
                    android:textSize="20sp" />

                <!--Personas ausentes-->
                <EditText
                    android:id="@+id/hv_persona_ausentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Ingrese el valor aqui"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible" />

                <!--Número de V-->
                <EditText
                    android:id="@+id/hv_nro_personas_comforman_nucleo_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:hint="Cuantas personas conforman su núcleo familiar?"
                    android:inputType="number"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:visibility="visible" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/home2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="Datos de la vivienda"
                    android:textColor="#a1a1a1"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:text="Incluido la sala y el comedor ¿Cuantos cuartosen total tiene su vivienda?"
                    android:textColor="#77ca00"
                    android:textSize="20sp" />

                <!--Propietario-->
                <EditText
                    android:id="@+id/hv_nro_cuartos_en_total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ingrese el valor aqui"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible" />

                <!---->

                <EditText
                    android:id="@+id/hv_cuartos_para_dormir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Cuanto de estos cuarto usa para dormir?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible" />


                <!---->
                <EditText
                    android:id="@+id/hv_tendencia_vivienda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Cuál es la forma de tendencia de la vivienda?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible" />



                <!---->
                <EditText
                    android:id="@+id/hv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittextstyle"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Cuál es el material principal de las paredes?"
                    android:textColor="#6b6b6b"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        </android.support.v7.widget.CardView>


    </ScrollView>


</LinearLayout>